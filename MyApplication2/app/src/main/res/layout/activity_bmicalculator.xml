<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#626C6C"
    tools:context=".BMICalculator">

    <!--weight layout-->
    <RelativeLayout
        android:id="@+id/weightlayout"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bmicardbackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Weight"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#443C3E"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"></TextView>

        <TextView
            android:id="@+id/currentweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="40"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#443C3E"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:gravity="center_horizontal"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textSize="20sp"
            android:textColor="#443C3E"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/currentweight"
            android:layout_toEndOf="@id/currentweight"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp">
        </TextView>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:progressTint="#626C6C"
            android:thumbTint="#B3B4B0"
            android:layout_marginRight="10dp"
            android:id="@+id/weightseekbar">
        </SeekBar>
    </RelativeLayout>

    <!--height layout-->
    <RelativeLayout
        android:id="@+id/heightlayout"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/weightlayout"
        android:background="@drawable/bmicardbackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Height"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#443C3E"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"></TextView>

        <TextView
            android:id="@+id/currentheight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="180"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#443C3E"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:gravity="center_horizontal"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cm"
            android:textSize="20sp"
            android:textColor="#443C3E"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/currentheight"
            android:layout_toEndOf="@id/currentheight"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp">
        </TextView>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:progressTint="#626C6C"
            android:thumbTint="#B3B4B0"
            android:layout_marginRight="10dp"
            android:id="@+id/heightseekbar">
        </SeekBar>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightlayout"
        android:id="@+id/calculatebmi"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:text="Calculate BMI"
        android:textColor="#443C3E"
        android:textStyle="bold"></Button>




</RelativeLayout>