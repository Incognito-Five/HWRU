<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#626C6C"
    tools:context=".bmicalculation">
    <!--*A SAVE BUTTON SHALL BE PUT UNDER RECALCULATE BMI AFTER THE CODE HAS BEEN CONNECTED TO DATABASE-->
    <!-- BMI ICON-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/contentlayout"
        android:src="@drawable/bmi"
        android:id="@+id/BMIimageview">
    </ImageView>
    <!--BMI Result-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bmicardbackground"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/contentlayout">
        <!--calculated BMI-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18.5"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:textSize="50sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/bmiresult">
        </TextView>
        <!--BMI Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI Category"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/bmiresult"
            android:id="@+id/bmicategory">
        </TextView>
    </RelativeLayout>

    <!--Recalculate BMI-->
    <android.widget.Button
        android:id="@+id/recalculatebmi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/contentlayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="31dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bmibuttonbackground"
        android:text="Recalculate BMI"
        android:textColor="#443C3E"
        android:textSize="15sp"
        android:textStyle="bold"></android.widget.Button>




</RelativeLayout>