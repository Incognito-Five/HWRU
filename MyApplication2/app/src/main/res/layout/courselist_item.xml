<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/courselistmainlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="3dp"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Course Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/course_name"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:layout_below="@id/course_name"
                android:text="Course Code"
                android:textStyle="italic"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/course_code"></TextView>

            <!--time-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:text="From"
                android:textStyle="normal"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/from"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="18:00"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/from"
                android:id="@+id/start_time"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="To"
                android:textStyle="normal"
                android:textSize="18sp"
                android:layout_toRightOf="@id/start_time"
                android:id="@+id/to"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="10:00"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/to"
                android:id="@+id/end_time"
                ></TextView>

            <!--days-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:layout_marginLeft="15dp"
                android:text="M"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/end_time"
                android:id="@+id/mon"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="T"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/mon"
                android:id="@+id/tue"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="W"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/tue"
                android:id="@+id/wed"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="Th"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/wed"
                android:id="@+id/thurs"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="F"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/thurs"
                android:id="@+id/fri"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="St"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/fri"
                android:id="@+id/sat"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_code"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="Sn"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/sat"
                android:id="@+id/sun"
                ></TextView>

            <!-- professor -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/from"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:text="Professor:"
                android:textStyle="normal"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/prof"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/from"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="Professor Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/prof"
                android:id="@+id/profname"
                ></TextView>

            <!--room location-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prof"
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:text="Room:"
                android:textStyle="normal"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/room"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prof"
                android:paddingTop="12dp"
                android:paddingLeft="7dp"
                android:text="Room Location"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_toRightOf="@id/room"
                android:id="@+id/roomlocation"
                ></TextView>

            <!--tap for more details-->

            <TextView
                android:id="@+id/bottomdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/room"
                android:layout_centerInParent="true"
                android:paddingLeft="7dp"
                android:paddingTop="7dp"
                android:text="Tap for more details."
                android:textSize="15sp"
                android:textStyle="italic"></TextView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>